.topic-list {
  padding: 48rpx 0 0;
}

.list-item {
  margin-right: 48rpx;
  /* box-shadow: 0px 0px 10px #888; */
  box-shadow: 0px 5px 5px -5px #d7d7d7,5px 0 5px -5px #d7d7d7, -5px 0 5px -5px #d7d7d7;
  margin-bottom: 60rpx;
  margin-left: 48rpx;
  overflow: hidden;
  border-radius: 15rpx;
}

.juzhong {
  display: flex;
  justify-content: center;
  align-items: center;
}

.topic-img {
  /* width: 303rpx; */
  width: 100%;
  height: 350rpx;
  border-radius: 15rpx 15rpx 0 0;
  margin: 0 auto;
}

.topic-name-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 20rpx 0 20rpx;
  font-size: 15px;
  color: #333;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 订阅按钮 */

.btn-box image {
  width: 80rpx;
  height: 40rpx;
  display: block;
}

/* 专题描述 */

.topic-brief {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #959595;
  padding: 20rpx;
}
